<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/qello_200</item>
        <item name="colorPrimaryVariant">@color/qello_600</item>
        <item name="colorSecondary">@color/fuschia_400</item>
        <item name="colorSecondaryVariant">@color/fuschia_700</item>
        <item name="android:colorBackground">@color/ui_almost_black</item>
        <item name="colorSurface">@color/ui_almost_black</item>
        <item name="colorError">@color/red_300</item>
        <item name="colorOnPrimary">@color/ui_almost_black</item>
        <item name="colorOnSecondary">@color/ui_almost_black</item>
        <item name="colorOnBackground">@color/ui_almost_white</item>
        <item name="colorOnSurface">@color/ui_almost_white</item>
        <item name="colorOnError">@color/ui_almost_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>
</resources>
